<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:background="@color/primary">

                <!-- Logo -->
                <com.pkmmte.view.CircularImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_140sdp"
                    app:border="true"
                    app:border_color="#EEEEEE"
                    app:border_width="@dimen/_4sdp"
                    app:shadow="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logo_caritathelp_2017_picture_only_normal"
                    android:scaleType="centerInside" />

                <!-- Join Bnt -->
                <ImageButton
                    android:id="@+id/btn_join"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    />

                <!-- Follow Bnt -->
                <ImageButton
                    android:id="@+id/btn_follow"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true" />

                <!-- Menu Bar -->
                <LinearLayout
                    android:id="@+id/menu_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:orientation="horizontal"
                    android:background="@color/primary_dark"
                    android:layout_alignParentBottom="true"
                    android:weightSum="6">

                    <ImageButton
                        android:id="@+id/btn_post"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"

                        android:src="@drawable/btn_selector_post"
                        android:scaleType="centerInside"
                        android:background="@android:color/transparent"/>

                    <ImageButton
                        android:id="@+id/btn_members"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"

                        android:src="@drawable/btn_selector_members"
                        android:scaleType="centerInside"
                        android:background="@android:color/transparent"/>

                    <ImageButton
                        android:id="@+id/btn_management"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="2"

                        android:src="@android:drawable/ic_menu_preferences"
                        android:scaleType="centerInside"
                        android:background="@android:color/transparent"
                        android:visibility="invisible"/>

                    <ImageButton
                        android:id="@+id/btn_events"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"

                        android:src="@drawable/btn_selector_events"
                        android:scaleType="centerInside"
                        android:background="@android:color/transparent"/>

                    <ImageButton
                        android:id="@+id/btn_informations"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"

                        android:src="@drawable/btn_selector_information"
                        android:scaleType="centerInside"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>


