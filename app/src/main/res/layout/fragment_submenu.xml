<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/submenu_my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="@color/icons">

            <!-- Logo -->
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/image"
                android:layout_width="48dp"
                android:layout_height="48dp"

                android:layout_centerInParent="true"
                android:src="@drawable/profile_example"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="1dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="1" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_weight="1"

                android:layout_gravity="center"
                android:text="@string/submenu_my_profile"
                android:textColor="@color/primary_text"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- DIVIDER -->
        <View style="@style/Divider" />
        <View
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@color/background" />
        <View style="@style/Divider" />

        <LinearLayout
            android:id="@+id/submenu_my_organisations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="@color/icons">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"

                android:src="@drawable/my_organisations"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_weight="1"

                android:layout_gravity="center"
                android:text="@string/submenu_my_organisations"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />

        </LinearLayout>

        <!-- DIVIDER -->
        <View style="@style/Divider" />

        <LinearLayout
            android:id="@+id/submenu_my_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="@color/icons">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"

                android:src="@drawable/my_events" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_weight="1"

                android:layout_gravity="center"
                android:text="@string/submenu_my_events"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />

        </LinearLayout>

        <!-- DIVIDER -->
        <View style="@style/Divider" />

        <LinearLayout
            android:id="@+id/submenu_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="@color/icons">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"

                android:src="@drawable/friends_3" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_weight="1"

                android:layout_gravity="center"
                android:text="@string/submenu_friends"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />

        </LinearLayout>

        <!-- DIVIDER -->
        <View style="@style/Divider" />
        <View
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@color/background" />
        <View style="@style/Divider" />

        <LinearLayout
            android:id="@+id/submenu_account_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="@color/icons">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"

                android:src="@drawable/settings" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_weight="1"

                android:layout_gravity="center"
                android:text="@string/submenu_account_settings"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />

        </LinearLayout>

        <!-- DIVIDER -->
        <View style="@style/Divider" />

        <LinearLayout
            android:id="@+id/submenu_security"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="@color/icons">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"

                android:src="@drawable/help" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_weight="1"

                android:layout_gravity="center"
                android:text="Aide et assistance"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />

        </LinearLayout>

        <!-- DIVIDER -->
        <View style="@style/Divider" />

        <LinearLayout
            android:id="@+id/submenu_about_caritathelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="@color/icons">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"

                android:src="@drawable/about" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_weight="1"

                android:layout_gravity="center"
                android:text="A propos de Caritathelp"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />

        </LinearLayout>


        <!-- DIVIDER -->
        <View style="@style/Divider" />
        <View
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@color/background" />
        <View style="@style/Divider" />

        <TextView
            android:id="@+id/submenu_logout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:padding="5dp"
            android:background="@color/icons"

            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/submenu_logout"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

        <!-- DIVIDER -->
        <View style="@style/Divider" />
        <View
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@color/background" />

        <TextView
            android:id="@+id/submenu_delete_account"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:padding="5dp"
            android:background="@color/icons"

            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/submenu_delete_account"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

        <!-- DIVIDER -->
        <View style="@style/Divider" />
        <View
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@color/background" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>